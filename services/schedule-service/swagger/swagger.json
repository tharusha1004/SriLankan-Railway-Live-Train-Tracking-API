{
    "openapi": "3.0.0",
    "info": {
        "title": "Sri Lankan Railway Schedule Service",
        "version": "1.0.0"
    },
    "paths": {
        "/schedules": {
            "get": {
                "summary": "Get all train schedules",
                "responses": {
                    "200": {
                        "description": "List of schedules",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": { "$ref": "#/components/schemas/Schedule" }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new schedule",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/Schedule" }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Schedule created"
                    }
                }
            }
        },
        "/schedules/{id}": {
            "get": {
                "summary": "Get a specific train schedule by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID of the schedule to retrieve"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Schedule retrieved",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Schedule" }
                            }
                        }
                    },
                    "404": {
                        "description": "Schedule not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Schedule": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID of the schedule"
                    },
                    "train_id": {
                        "type": "string",
                        "description": "ID of the train"
                    },
                    "route": {
                        "type": "string",
                        "description": "Route of the train"
                    },
                    "time": {
                        "type": "string",
                        "format": "time",
                        "description": "Scheduled time of the train"
                    }
                }
            }
        }
    }
}
