{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Login Service API",
      "description": "API documentation for the login service"
    },
    "host": "localhost:5000",
    "basePath": "/",
    "tags": [
      {
        "name": "Users",
        "description": "API for managing users"
      }
    ],
    "schemes": ["http"],
    "paths": {
      "/admin/login": {
        "post": {
          "tags": ["Users"],
          "summary": "Login as admin",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Admin login credentials",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Login"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Login successful"
            },
            "400": {
              "description": "Invalid credentials"
            }
          }
        }
      },
      "/register": {
        "post": {
          "tags": ["Users"],
          "summary": "Register a new user",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "User registration data",
              "required": true,
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "User created successfully"
            },
            "400": {
              "description": "User already exists"
            }
          }
        }
      },
      "/login": {
        "post": {
          "tags": ["Users"],
          "summary": "Login as normal user",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "User login credentials",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Login"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Login successful"
            },
            "400": {
              "description": "Invalid credentials"
            }
          }
        }
      },
      "/profile": {
        "put": {
          "tags": ["Users"],
          "summary": "Update user profile",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "User profile data",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Profile"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Profile updated successfully"
            },
            "404": {
              "description": "User not found"
            }
          }
        }
      },
      "/delete": {
        "delete": {
          "tags": ["Users"],
          "summary": "Delete user account",
          "responses": {
            "200": {
              "description": "User deleted successfully"
            },
            "404": {
              "description": "User not found"
            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string",
            "example": "user123"
          },
          "password": {
            "type": "string",
            "example": "pass123"
          },
          "profile": {
            "type": "object",
            "properties": {
              "fullName": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "example": "john.doe@example.com"
              }
            }
          }
        }
      },
      "Login": {
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string",
            "example": "user123"
          },
          "password": {
            "type": "string",
            "example": "pass123"
          }
        }
      },
      "Profile": {
        "properties": {
          "fullName": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          }
        }
      }
    }
  }
  